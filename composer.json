{
    "name": "farzai/thorakhong",
    "description": "The package for sending messages to multiple chat platforms such as Line, Telegram, and Facebook Messenger.",
    "keywords": [
        "farzai",
        "thorakhong"
    ],
    "homepage": "https://github.com/farzai/thorakhong",
    "license": "MIT",
    "authors": [
        {
            "name": "parsilver",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Farzai\\Thorakhong\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Farzai\\Thorakhong\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
